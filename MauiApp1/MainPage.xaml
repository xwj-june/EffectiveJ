<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <StackLayout x:Name="stackLayout" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <controls:CountdownControl Duration="00:00:05" />
            <controls:CountdownControl Duration="00:00:10" />
            <Label x:Name="countdownTimer" Text="Time display"></Label>
            <Entry x:Name="taskDetails" Placeholder="Enter task details" />
        </StackLayout>
    </ScrollView>

</ContentPage>
