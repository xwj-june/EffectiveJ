<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EffectiveJ.Maui.Views.MainPage">

    <ScrollView>
        <StackLayout x:Name="stackLayout" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Entry x:Name="taskDetails" Placeholder="Enter task details" />
            <HorizontalStackLayout Margin="15">
                <Button x:Name="testButton" Clicked="TestButton_Clicked" Text="Test"></Button>
                <Button x:Name="FirstButton" Clicked="FirstButton_Clicked" Text="30 Mins"></Button>
                <Button x:Name="SecondButton" Clicked="SecondButton_Clicked" Text="60 Mins"></Button>
            </HorizontalStackLayout>

            <Label  x:Name="countdownTimer" Text="00：00" HorizontalOptions="CenterAndExpand" FontSize="18"></Label>
        </StackLayout>
    </ScrollView>

</ContentPage>
